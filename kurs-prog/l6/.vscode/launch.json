{
    "configurations": [
        {
            "name": "Launch JavaFX project",
            // "preLaunchTask": "Build JavaFX java project",
            "type": "java",
            "request": "launch",
            "vmArgs": "--module-path /opt/javafx-sdk-17.0.15/lib --add-modules javafx.controls,javafx.fxml,javafx.graphics,javafx.media,javafx.swing,javafx.web",
            "mainClass": "${workspaceFolder}/Main.java",
            "classPaths": [
                "${workspaceFolder}/classes",
                "${workspaceFolder}/resources"
            ]
        }
    ]
}
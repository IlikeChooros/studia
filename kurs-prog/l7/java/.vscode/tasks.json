{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build JavaFX java project",
            "command": "javac",
            "args" : [
                "--module-path", 
                "/opt/javafx-sdk-17.0.15/lib",
                "--add-modules",
                "javafx.controls",
                "*.java",
                "-d",
                "${workspaceFolder}/classes",
            ]
        }
    ]
}